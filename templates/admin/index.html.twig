{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
    <h1>Admin</h1>
    <div class="bike-list-admin">

            <a class="add-product-btn" href="{{ path('add_product') }}">Ajouter un produit</a>

        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Nom</th>
                    <th>Marque</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Valide</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td><img class="picture-100" src="{{ asset('assets/img/'~product.picture) }}" alt="{{ product.name }}"></td>
                        <td><a class="blue-link" href="{{ path('product', {'id' : product.id}) }}">{{ product.name }}</a></td>
                        <td class="text-center">{{ product.brand }}</td>
                        <td class="text-center">{{ product.productType }}</td>
                        <td class="text-center">{{ product.price }} â‚¬</td>
                        <td class="text-center">
                            <input class="update-valid-product" type="checkbox" data-id="{{ product.id }}"{% if product.isValid %} checked {% endif %}>
                        </td>
                        <td>
                            <a href="{{ path('edit_product', {'id' : product.id}) }}" title="editer">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('delete_product', {'id' : product.id}) }}">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/updateValidProduct.js') }}"></script>
{% endblock %}