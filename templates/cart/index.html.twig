{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>
    <div class="cart-div">
        {% if cart %}
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prix unitaire</th>
                    <th>Quantité</th>
                    <th>Prix total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% set total = 0 %}
                {% for product in cart %}
                    {% set total = total + product.product.price * product.quantity  %}
                    <tr>
                        <td class="d-flex">
                            <div class="cart-img-div">
                                <img src="https://fakeimg.pl/150x100/">
                            </div>
                            <div class="cart-text-div">
                                <p>{{ product.product.name }}</p>
                            </div>

                        </td>
                        <td class="text-center">{{ product.product.price }} €</td>
                        <td class="text-center">
                            <div>
                                <a href="{{ path('decrease_cart', {'id' : product.product.id}) }}" title="Ajouter au panier">
                                    <span class="cart-update-quantity">-</span>
                                </a>
                                <span class="cart-quantity">
                                    {{ product.quantity }}
                                </span>

                                <a href="{{ path('increase_cart', {'id' : product.product.id}) }}" title="Ajouter au panier">
                                    <span class="cart-update-quantity">+</span>
                                </a>
                            </div>

                        </td>
                        <td class="text-center">{{ product.product.price * product.quantity  }} €</td>
                        <td>
                            <a href="{{ path('remove_cart', {'id' : product.product.id}) }}"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot class="bold">
                <tr>
                    <td colspan="3" class="text-center">Total de mes articles :</td>
                    <td colspan="2">{{ total }} €</td>
                </tr>
            </tfoot>
        </table>
            <button class="btn btn-success ">
                <a href="{{ path('order') }}">Valider mon panier</a>
            </button>
        {% else %}
            <h4 class="text-center">Votre panier est vide</h4>
            <h4 class="text-center">La liste de nos vélos <a class="blue-link" href="{{ path('product_list') }}">ici</a></h4>
        {% endif %}
    </div>
{% endblock %}
