{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Nos v√©los</h1>
    <div class="bike-list">
        {% for index, product in products %}
            <div class="cart">
                <a href="{{ path('product', {'id' : product.id}) }}">
                    <div class="cart-img">
                        <img style="width: 300px" src="{{ asset('assets/img/'~product.picture) }}">
                    </div>
                    <div class="cart-info">
                        <h4>{{ product.name }}</h4>
                        <p>{{ product.brand }} / {{ product.productType }}</p>
                        <p>{{ product.price|format_currency('EUR', locale='fr') }}</p>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
